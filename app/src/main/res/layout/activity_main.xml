<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nd.centertableinc.popularmovies1.activity.movie_overview.MovieOverviewActivity"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nothing_to_load"
        android:gravity="center"
        android:id="@+id/movie_overview_text_nothing_to_load"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/movie_overview_recycler_view"
        android:layout_marginLeft="@dimen/recycler_card_margin_left"
        android:layout_marginRight="@dimen/recycler_card_margin_right">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
